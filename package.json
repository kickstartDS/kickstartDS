{
  "name": "kickstartds",
  "private": true,
  "repository": "kickstartDS/kickstartDS",
  "workspaces": [
    "packages/*/*"
  ],
  "scripts": {
    "build": "lerna run --stream --no-prefix build",
    "build:prod": "NODE_ENV=production yarn run build",
    "copy-env-file": "[ ! -f .env ] && cp .env-example .env || true",
    "chromatic": "yarn run run-chromatic -- chromatic",
    "chromatic-base": "yarn run run-chromatic -- chromatic-base",
    "chromatic-blog": "yarn run run-chromatic -- chromatic-blog",
    "chromatic-content": "yarn run run-chromatic -- chromatic-content",
    "dereference": "node scripts/schemaDereference.js",
    "eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "find-licenses": "node ./scripts/license.js",
    "format": "prettier --write .",
    "git-config": "git config --local include.path ../.gitconfig",
    "husky-commit-msg": "commitlint -E GIT_PARAMS",
    "husky-pre-commit": "yarn run schema && git add packages/*/*/source/**/*Props.ts && lint-staged",
    "lint": "run-p eslint stylelint",
    "list": "lerna la",
    "netlifycms-config": "node packages/tools/netlify-cms/scripts/schema-convert-to-netlify-yaml.js",
    "postinstall": "run-p git-config copy-env-file",
    "run-chromatic": "lerna run --scope @kickstartds-internal/storybook --stream --no-prefix",
    "schema": "lerna run --parallel --no-prefix schema",
    "staged": "git diff --name-only --cached | grep '@kickstartds' | cut -d / -f 3 | awk '!seen[$0]++'",
    "storybook": "lerna run --scope @kickstartds-internal/storybook --stream --no-prefix storybook --",
    "storybook:build": "yarn run storybook build",
    "storybook:debug": "yarn run storybook debug",
    "stylelint": "stylelint \"**/*.scss\"",
    "prepare": "husky install",
    "watch": "lerna run --parallel --no-prefix watch",
    "watch-tokens": "sass --watch --load-path=node_modules packages/components/core/source/design-tokens/tokens.scss packages/components/core/lib/design-tokens/tokens.css"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "chokidar": "^3.5.2",
    "del": "^6.0.0",
    "execa": "^5.1.1",
    "fancy-log": "^1.3.3",
    "fast-glob": "^3.2.5",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.1",
    "json-csv": "^3.0.1",
    "json-schema-faker": "^0.5.0-rcv.33",
    "jsonschema2graphql": "^1.1.1",
    "license-checker": "^25.0.1",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.29.3",
    "@auto-it/first-time-contributor": "^10.29.3",
    "@auto-it/npm": "^10.29.3",
    "@auto-it/released": "^10.29.3",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "auto": "^10.29.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.29.0",
    "eslint-import-resolver-lerna": "^2.0.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.0",
    "typescript": "^4.3.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "unsafe-perm": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json,scss}": "prettier --write"
  }
}
