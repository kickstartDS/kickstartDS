{
  "name": "kickstartds",
  "private": true,
  "scripts": {
    "build": "lerna run --stream --no-prefix build",
    "watch": "lerna run --parallel --no-prefix watch",
    "copy-env-file": "[ ! -f .env ] && cp .env-example .env || true",
    "chromatic": "NODE_ENV=production npm run build && chromatic --project-token $CHROMATIC_PROJECT_TOKEN --build-script-name 'storybook:build' --skip '@(renovate/**|dependabot/**)' --exit-zero-on-changes",
    "chromatic-base": "NODE_ENV=production npm run build && chromatic --project-token $CHROMATIC_PROJECT_TOKEN --build-script-name 'storybook-base:build' --skip '@(renovate/**|dependabot/**)' --exit-zero-on-changes",
    "chromatic-blog": "NODE_ENV=production npm run build && chromatic --project-token $CHROMATIC_PROJECT_TOKEN --build-script-name 'storybook-blog:build' --skip '@(renovate/**|dependabot/**)' --exit-zero-on-changes",
    "chromatic-content": "NODE_ENV=production npm run build && chromatic --project-token $CHROMATIC_PROJECT_TOKEN --build-script-name 'storybook-content:build' --skip '@(renovate/**|dependabot/**)' --exit-zero-on-changes",
    "dereference": "node scripts/schemaDereference.js",
    "eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "find-licenses": "node ./scripts/license.js",
    "format": "prettier --write .",
    "git-config": "git config --local include.path ../.gitconfig",
    "husky-commit-msg": "commitlint -E GIT_PARAMS",
    "husky-pre-commit": "npm run schema && git add packages/*/*/source/**/*Props.ts && lint-staged",
    "lint": "run-p eslint stylelint",
    "list": "lerna la",
    "postinstall": "run-p git-config copy-env-file",
    "schema": "lerna run --parallel --no-prefix schema",
    "staged": "git diff --name-only --cached | grep '@kickstartds' | cut -d / -f 3 | awk '!seen[$0]++'",
    "storybook": "node packages/tools/storybook",
    "storybook:build": "node packages/tools/storybook build",
    "storybook:debug": "node packages/tools/storybook debug",
    "storybook:generate": "node packages/tools/storybook generate",
    "storybook-base:build": "node packages/tools/storybook build --module base",
    "storybook-blog:build": "node packages/tools/storybook build --module blog",
    "storybook-content:build": "node packages/tools/storybook build --module content",
    "stylelint": "stylelint \"**/*.scss\"",
    "prepare": "husky install",
    "watch-tokens": "sass --watch --load-path=node_modules packages/components/core/source/design-tokens/tokens.scss packages/components/core/lib/design-tokens/tokens.css"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "chokidar": "^3.5.1",
    "del": "^6.0.0",
    "execa": "^5.0.0",
    "fancy-log": "^1.3.3",
    "fast-glob": "^3.2.5",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.0",
    "json-csv": "^3.0.1",
    "json-schema-faker": "^0.5.0-rcv.33",
    "jsonschema2graphql": "^1.1.1",
    "license-checker": "^25.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-import-resolver-lerna": "^2.0.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "stylelint": "^13.13.0",
    "typescript": "^4.2.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "unsafe-perm": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json,scss}": "prettier --write"
  }
}
