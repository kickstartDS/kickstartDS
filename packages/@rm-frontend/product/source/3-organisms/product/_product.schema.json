{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/product/organisms/product.schema.json",
  "title": "Product",
  "description": "Product",
  "type": "object",
  "properties": {
    "productItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slideComponent": { "type": "string" },
          "topic": { "type": "string" },
          "number": { "type": "string" },
          "content": { "type": "string" },
          "price": { "type": "string" },
          "link": { "type": "string" },
          "href": { "type": "string" },
          "card": {
            "type": "object",
            "properties": {
              "cardImage": { "type": "string" },
              "special": { "type": "string" },
              "additionalContent": { "type": "boolean" }
            }
          },

          "detail": {
            "type": "object",
            "properties": {
              "detailImage": { "type": "string" }
            }
          },

          "slider": {
            "type": "object",
            "properties": {
              "sliderItemImage": { "type": "string" }
            }
          },

          "teaser": {
            "type": "object",
            "properties": {
              "clickable": { "type": "boolean" },
              "productTeaserLarge": { "type": "boolean" },
              "withoutSpacing": { "type": "boolean" },
              "fullWidth": { "type": "boolean" },
              "id": { "type": "string" },
              "teaserImage": { "type": "string" }
            }
          },

          "imageSlider": {
            "type": "object",
            "properties": {
              "slideComponent": { "type": "string" },
              "previewComponent": { "type": "string" },
              "thumbnail": { "type": "string" },
              "imageWidth": { "type": "string" },
              "imageHeight": { "type": "string" },
              "image": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
