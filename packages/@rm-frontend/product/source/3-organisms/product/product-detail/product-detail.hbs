{{#> base-section}}
  <div class="product-detail">
    <div class="product-detail__infos" itemscope itemtype="http://schema.org/Product">
      <div class="product-detail__infos__images">
        {{> organisms-product-image-slider }}
      </div>

      {{#each (slice productItems 0 1)}}
        {{> molecules-product-detail-info-item this }}
      {{/each}}
    </div>

    <div class="rich-text">
      <h3>Lorem Ipsum</h3>
      {{> molecules-product-description }}
    </div>

    <div class="product-detail__data">
      <h3>Lorem Ipsum</h3>
      {{> molecules-product-data }}
    </div>

    <div class="product-detail__downloads">
      <h3>Lorem Ipsum</h3>
      {{> molecules-product-downloads }}
    </div>
  </div>
{{/base-section}}
