{{#> base-section}}
  <div class="glossary">
    {{> molecules-glossary-nav }}

    <div class="glossary__subnav">
      {{> molecules-glossary-subnav }}
    </div>

    <div class="glossary__content rich-text">
      <h1>{{glossary.headline}}</h1>

      {{> molecules-glossary-toc }}

      {{#if (comp glossary.image.positionY "!==" "bottom")}}
        {{> molecules-glossary-image glossary.image}}
      {{/if}}

      {{#each glossary.content}}
        <h2 id="{{this.id}}">{{headline}}</h2>
          {{#each content}}
            <h3 id="{{this.id}}">{{headline}}</h3>
          {{/each}}
        {{{this.text}}}
      {{/each}}

      {{#if (comp glossary.image.positionY "==" "bottom")}}
        {{> molecules-glossary-image glossary.image positionX=false}}
      {{/if}}

      <div class="glossary__crossreference">
        <p> Weitere Glossareinträge, die Sie interessieren könnten:</p>
        {{> molecules-tag-label-container tag-labels=glossary-crossreference}}
      </div>
    </div>
  </div>
{{/base-section}}
