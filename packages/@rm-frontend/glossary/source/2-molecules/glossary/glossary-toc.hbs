<div class="glossary-toc" data-component="glossary.toc">
  <div class="dropdown" data-component="base.slide-dropdown">
    <details open>
      <summary>
        <div class="glossary-toc__toggle">
          Inhaltsverzeichnis
          {{> atoms-icon icon="chevron-down" role="none" }}
        </div>
      </summary>

      <ol class="glossary-toc__list">
        {{#each glossary.content}}
        <li class="glossary-toc__item">
          <a class="glossary-toc__link" href="#{{id}}">{{this.headline}}</a>

          {{#each content}}
          <ol class="glossary-toc__list">
            <li class="glossary-toc__item">
              <a class="glossary-toc__link" href="#{{id}}">{{this.headline}}</a>
            </li>
          </ol>
          {{/each}}
        </li>

        {{/each}}
      </ol>

    </details>
  </div>
</div>