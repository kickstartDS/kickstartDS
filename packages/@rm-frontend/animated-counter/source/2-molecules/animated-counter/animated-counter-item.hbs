<div class="animated-counter__item">
  <div class="animated-counter__number-wrap">
    {{#if icon}}
    <div class="animated-counter__icon">
      {{> atoms-icon icon=icon className=""}}
    </div>
    {{/if}}
    <div class="animated-counter__number" data-component="animated-counter.number" data-animation-classes="_">
      {{number}}
    </div>
  </div>
  <div class="animated-counter__topic">
    {{headline}}
  </div>
  <div class="animated-counter__text">
    <p>
      {{text}}
    </p>
  </div>
  {{#if link}}
    <div class="animated-counter__link">
      {{> atoms-link-button link }}
    </div>
  {{/if}}
</div>