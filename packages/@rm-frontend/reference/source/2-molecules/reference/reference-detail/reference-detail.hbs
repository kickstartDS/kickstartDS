      {{> organisms-reference-detail-gallery }}

    {{#if extended}}
    </div>

    <div class="reference-detail__info-wrapper">
      <h2 class="reference-detail__info-headline">Kontaktdaten</h2>
      <div class="reference-detail__info">
        {{#each extended}}
        <div class="reference-detail__info__item">
          <div>
            {{> atoms-icon role="img" }}
          </div>
          <div>
            {{{text}}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{/if}}

  <div class="reference-detail__back l-centered">
    {{> atoms-link-button label="Alle Referenzen" style="outline"}}
  </div>
</div>
