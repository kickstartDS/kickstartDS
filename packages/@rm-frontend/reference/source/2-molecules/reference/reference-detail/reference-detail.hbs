<div class="reference-detail">
  <div class="reference-detail__logo">
    {{#if extended}}
    <div class="reference-detail__wrapper reference-detail__wrapper--logo">
      <div class="reference-detail__logo__inner-wrapper">
    {{/if}}
        {{#if logo}}
        <div class="reference-detail__logo__image">
          <img src="{{@root.asset_paths.images}}/dummy/logo.png" alt="">
        </div>
        {{/if}}
        <div class="reference-detail__logo__name">
          Firma Lorem Ipsum
          {{#if categories}}
          {{> molecules-tag-label-container tag-labels=categories}}
          {{/if}}
        </div>
      {{#if extended}}
      </div>
      <span class="reference-detail__logo__meta">
        Lorem ipsum dolor sit
      </span>
    </div>
    {{/if}}
  </div>

  {{#if extended}}
  <div class="reference-detail__wrapper">
    <div class="reference-detail__main">
  {{/if}}

      <div itemscope>
        <h1 itemprop="name" itemtype="http://schema.org/name" id="reference-name">Titel der Referenz</h1>
