<article class="reference-list-item" data-component="reference.item">

  <div class="reference-list-item__logo">
    {{#if image}}
    <div class="reference-list-item__logo__image">
      <img src="{{@root.asset_paths.images}}/dummy/logo.png" alt="">
    </div>
    {{/if}}
    <span class="reference-list-item__logo__name">
      Firma Lorem Ipsum
    </span>
  </div>

  <div class="reference-list-item__content-wrap">
    <div class="reference-list-item__header">
      <h2 id="reference-header-{{key}}">
        Titel der Referenz
      </h2>
    </div>

    <div class="reference-list-item__content">
      {{#if image}}
      <div class="reference-list-item__image">
        <img src="{{@root.asset_paths.images}}/dummy/16-9-xl.png" alt="">
      </div>
      {{/if}}
      <div class="reference-list-item__teaser">
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Odio ipsa exercitationem veritatis animi eius
          delectus praesentium reiciendis recusandae natus amet.</p>

        <div class="reference-list-item__more">
          {{> atoms-link-button
            href=url
            open-in-tab=open-in-tab
            id=(concat "reference-link-more-" key)
            ariaLabelledby=(concat "reference-link-more-" key " reference-header-" key)
            label="zur Referenz"
            icon=(object icon="arrow-right")
            iconAfter=true
            style="clear"
          }}
        </div>
      </div>
    </div>

  </div>

</article>