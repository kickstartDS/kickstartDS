{{#if gallery}}
  <div class="gallery reference-detail__gallery">
    {{#each (slice gallery 0 5)}}
      {{#if @first}}
        {{> atoms-lightbox-image hideCaption=true gallery="lightbox--reference" id="microdata-reference-image" alt="" }}
      {{else}}
        {{> atoms-lightbox-image hideCaption=true gallery="lightbox--reference" id="" alt="" }}
      {{/if}}
    {{/each}}
  </div>
{{/if}}
