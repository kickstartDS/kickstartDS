<div class="quote">
  {{#if image}}
  <div class="quote__image-wrap">
    <div class="quote__image">
      <img src="{{@root.asset_paths.images}}/{{image}}">
    </div>
  </div>
  {{/if}}
  <div class="quote__content">
    <div class="quote__text">
      {{ text }}
    </div>

    {{#if source}}
    <div class="quote__source">
      {{ source }}
    </div>
    {{/if}}

    {{#if date}}
    <div class="quote__date">
      {{ dateFormat date 'dd.MM.yyyy' }}
    </div>
    {{/if}}
  </div>
</div>