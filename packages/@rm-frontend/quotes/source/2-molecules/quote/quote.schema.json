{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/quotes/molecules/quote.schema.json",
  "title": "Quote",
  "description": "Quote",
  "type": "object",
  "properties": {
    "image": {
      "type": "string",
      "format": "image",
      "default": "images/dummy/1-1-xl.png"
    },
    "text": {
      "type": "string",
      "default": "Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua."
    },
    "source": {
      "type": "string",
      "default": "Lorem Ipsum"
    },
    "date": {
      "type": "string",
      "format": "date",
      "default": "2021-03-29"
    }
  },
  "required": ["text"]
}
