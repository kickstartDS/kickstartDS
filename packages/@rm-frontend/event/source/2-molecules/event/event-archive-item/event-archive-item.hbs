<article class="event-archive__item">
  <div class="event-archive__item__date">
    {{ day }}.{{ month }} {{ year }}
  </div>

  <div class="event-archive__item__header">
    <h2 id="event-archive-header-123">
      {{ event-header }}
    </h2>
  </div>

  <div class="event-archive__item__teaser">
    <div class="event__infos">
      <div class="event__infos__item">
        <div>
          {{ archive.event-info }}
        </div>
      </div>
      <div class="event-archive__item__categories">
        <div>
          {{ archive.categories }}
        </div>
      </div>
    </div>
  </div>

  <div class="event-archive__item__teaser-link">
      <a href="{{url}}">Veranstaltung ansehen
        {{> atoms-icon icon="chevron-right" role="img" }}
      </a>
  </div>
</article>
