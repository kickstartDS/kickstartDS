<div class="event-item" data-component="event.event-item">
  <div class="event-item__date-pill" alt="{{ day }}. {{month}}" role="img">
    <div aria-hidden="true" class="event-item__date-pill__day">{{ day }}</div>
    <div aria-hidden="true" class="event-item__date-pill__month">{{ subString month 0 3 }}</div>
  </div>
  <div class="event-item__wrapper">
    <div class="event-item__header">
      <h2 id="event-header-{{@index}}">
        <a href="{{url}}" {{#if open-in-tab}} target="_blank" rel="noopener" {{/if}}>{{ event-header }}</a>
      </h2>
    </div>
    <div class="event-item__categories">
      {{> molecules-tag-label-container}}
    </div>

    <div class="event-item__description">
      {{#if list.list-image}}
      <div class="event-item__image">
        <img src="{{@root.asset_paths.images}}/{{ list.list-image }}" alt="">
      </div>
      {{/if}}
      <div class="event-item__summary">
        <p>{{ list.event-teaser }}</p>
      </div>
    </div>

    <div class="event-item__information-wrapper">
      <div class="event-item__info">
        <div class="event-item__info__item">
          <div>
            {{> atoms-icon icon="place" role="img" }}
          </div>
          <div>
            {{{ list.event-address }}}
          </div>
        </div>
        <div class="event-item__info__item">
          <div>
            {{> atoms-icon icon="date" role="img" }}
          </div>
          <div>
            {{ day }}.{{ month }} {{ year }}
          </div>
        </div>
        <div class="event-item__info__item">
          <div>
            {{> atoms-icon icon="time" role="img" }}
          </div>
          <div>
            {{ list.time }}
          </div>
        </div>
        <div class="event-item__info__price">
          â‚¬ 124,60
        </div>
        <div class="event-item__cta">
        {{> atoms-link-button id=(concat "event-link-more-" @index) ariaLabelledby=(concat "event-link-more-" @index " event-header-" @index) label="Zur Veranstaltung" style="clear"}}
        </div>
        <p class="event-item__info__additional">
          Weitere Temine und Veranstaltungsorte
        </p>
      </div>
      <div class="event-item__profile-list">
      {{#each list.profile}}
        {{> molecules-profile }}
      {{/each}}
      </div>
    </div>
  </div>
</div>