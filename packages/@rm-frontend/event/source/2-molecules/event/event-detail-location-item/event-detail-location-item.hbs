<div class="event-detail__location__item" data-component="event.event-detail">
  {{#if (comp lat "&&" long)}}
  <div class="event-detail__location__map">
    {{> molecules-location-map }}
  </div>
  {{/if}}
  <div class="event-detail__location__info">
    <div class="event__infos__item">
      <div>
        {{> atoms-icon icon="place" role="img" }}
      </div>
      <div class="event__infos__address" id="microdata-event-location-{{@index}}" itemprop="location" itemscope itemtype="http://schema.org/Place" itemref="microdata-event-map-{{@index}}">
        <meta itemprop="name" content="{{location}}">
        <div itemprop="address">
          {{location}}
          <br>
          {{street}}
          <br>
          {{city}}
          <br>
        </div>
        {{#if (comp lat "&&" long)}}
        <div class="event__infos__additional">
          {{> atoms-button type="button" style="outline" className="js-event-detail__btn-show-map" label="Karte anzeigen"}}
          {{> atoms-button type="button" className="js-event-detail__btn-hide-map is-hidden" style="outline" label="Karte schließen"}}
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="event-detail__location__dates">
    {{#each date-box}}

      <div class="event-detail__location__date" itemscope itemtype="http://schema.org/Event"
        itemref="microdata-event-name microdata-event-description microdata-event-location-{{@index}} microdata-event-image">
        <div class="event__infos">
          <div class="event__infos__item">
            <div>
              {{> atoms-icon icon="date" role="img" }}
            </div>
            <div>
              {{this.date}}
            </div>
          </div>

          <div class="event__infos__item">
            <div>
              {{> atoms-icon icon="time" role="img" }}
            </div>
            <div>
              <time datetime="2017-04-17T{{this.start-time}}" itemprop="startDate">{{this.start-time}}</time> – <time datetime="2017-04-17T{{this.end-time}}" itemprop="endDate">{{this.end-time}}</time>
            </div>
          </div>
        </div>

        <div class="event-detail__location__offer">
          <div class="event-detail__location__offer__price">
            € 112,50
          </div>
          <div class="event-detail__location__offer__cta">
            {{> atoms-link-button style="solid" label="Jetzt Anmelden"}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>