{{#> base-section }}
  <div class="event-register">
    <header class="section-headline">
      Anmeldeanfrage
    </header>

    <div itemscope><h1 itemprop="name" itemtype="http://schema.org/name" id="microdata-event-name">Veranstaltung</h1></div>

    <p><a href="{{url}}">Infos zur Veranstaltung</a></p>

    <div class="event__infos">
      <div class="event__infos__item">
        <div>
          {{> atoms-icon icon="date" role="img" }}
        </div>
        <div>
          13. April 2017
        </div>
      </div>

      <div class="event__infos__item">
        <div>
          {{> atoms-icon icon="time" role="img" }}
        </div>
        <div>
          08:00 - 13 Uhr
        </div>
      </div>

      <div class="event__infos__item">
        <div>
          {{> atoms-icon icon="place" role="img" }}
        </div>
        <div>
          Stadthalle
          <br>
          Schaafenstraße 25
          <br>
          12345 Köln
        </div>
      </div>
    </div>

    <form action="#" class="contact-form lazyload" data-component="base.form" data-url="/api/event/{{data-url}}">
      <div class="form-row form-row--notification"></div>
      <fieldset>

        <div class="contact__form__row">
          <div class="contact__form__column">

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Name*") type="text" id="name-c1" name="name" required="required"}}
            </div>

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Email*") type="email" id="email-c1" name="email" required="required"}}
            </div>

            <div class="form-row form-row--checkbox">
              {{> atoms-checkbox label=(concat 'Ich habe die <a href="' url '">Datenschutzbestimmungen</a> gelesen*') id="filter-1" name="filter-1" required="required"}}
            </div>

            <div class="form-row form-controls">
              <div class="form-legend">* Pflichtfelder</div>
              {{> atoms-button label="Absenden" type="submit" style="solid"}}
            </div>

          </div>
        </div>
      </fieldset>
    </form>
  </div>
{{/base-section}}
