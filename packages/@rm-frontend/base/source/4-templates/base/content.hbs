{{#> organisms-main }}

  {{#if keyvisual}}
    <div class="page-intro">
      {{try "molecules-keyvisual" keyvisual}}
    </div>
  {{/if}}

  {{#if intro-visuals}}
    <div class="page-intro">
      {{#each intro-visuals}}
        {{try "molecules-intro-visual" (merge @root (object intro-visual=this))}}
      {{/each}}
    </div>
  {{/if}}

  {{#unless no-breadcrumb}}
    {{> organisms-breadcrumb }}
  {{/unless}}

  {{#if headline}}
    {{> organisms-headline headline }}
  {{/if}}

  {{#each templates as |template|}}
    {{#if (comp template.type "===" "100")}}
      <div class="template template--content-100">
        {{#each template.content}}
          {{try (lookup this 'component') (merge @root data) id=(concat @../index "-" @index) }}
        {{/each}}
      </div>
    {{else if (comp template.type "===" "70-30")}}
      <div class="template template--content-70-sidebar-30">
        <div class="template__content">
          {{#each template.content}}
            {{try (lookup this 'component') (merge @root data) id=(concat @../index "-" @index) }}
          {{/each}}
        </div>
        <aside class="template__sidebar">
          {{#each template.sidebar}}
            {{try (lookup this 'component') (merge @root data) id=(concat @../index "-" @index) }}
          {{/each}}
        </aside>
      </div>
    {{else if (comp template.type "===" "30-70")}}
      <div class="template template--sidebar-30-content-70">
        <div class="template__content">
          {{#each template.content}}
            {{try (lookup this 'component') (merge @root data) id=(concat @../index "-" @index) }}
          {{/each}}
        </div>
        <aside class="template__sidebar">
          {{#each template.sidebar}}
            {{try (lookup this 'component') (merge @root data) id=(concat @../index "-" @index) }}
          {{/each}}
        </aside>
      </div>
    {{/if}}
  {{/each}}

{{/organisms-main }}
