<div class="l-section" id="c{{ id }}">
  <div class="l-main-wrap{{#if layout-variant}} l-main-wrap--{{layout-variant}}{{/if}}">

    {{> molecules-content-headline content="Teaser-Box" subheader="1 columns" }}

    <div class="teaser-box-wrap grid-container grid-container--1-per-row">
      {{#each (slice teaser-box 0 1)}}
        <div class="teaser-box">
          {{> molecules-teaser-box-item}}
        </div>
      {{/each}}
    </div>

  </div>
</div>