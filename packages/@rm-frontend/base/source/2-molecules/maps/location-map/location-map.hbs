{{#if (comp lat "&&" long)}}
<div class="location-map" data-lat="{{lat}}" data-long="{{long}}" data-component="base.location-map">
  <div class="location-map__content">
    <div class="location-map__map">
      <div class="location-map__map__content"></div>
    </div>

    <div class="location-map__cta">
      <div>
        {{> atoms-link-button style="outline" label="Karte vergrößern" newTab=true itemprop="hasMap" id=(concat "microdata-event-map-" @index) href="https://www.google.com/maps/search/?api=1&query=50.934860,6.942230&query_place_id=ChIJTSxrkAAlv0cRcQEiNFKrakw"}}
      </div>
      <div>
        {{> atoms-link-button style="outline" label="Route berechnen" newTab=true href="https://www.google.com/maps/dir/?api=1&destination=50.934860,6.942230&destination_place_id=ChIJTSxrkAAlv0cRcQEiNFKrakw"}}
      </div>
    </div>
  </div>

  <div class="location-map__loading-indicator">
    {{> atoms-loading-indicator }}
  </div>
</div>
{{/if}}