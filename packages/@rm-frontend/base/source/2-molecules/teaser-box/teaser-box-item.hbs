<div class="teaser-box__item{{#if darkStyle}} teaser-box__item--style-dark{{/if}}{{#if imageSpacing}} image--spacing{{/if}}" data-component="base.teaser-box">
  <div {{#if (comp ratio "===" "4:3")}}class="teaser-box__item__image--four-to-three"{{/if}}
    {{#if (comp ratio "===" "16:9")}}class="teaser-box__item__image--sixteen-to-nine"{{/if}}
    {{#if (comp ratio "===" "1:1")}}class="teaser-box__item__image--square"{{/if~}}>
    {{> atoms-lazy-img src=image class="teaser-box__item__image" objectFit=true}}
  </div>
  {{#if (comp topic "||" (comp text "||" link))}}
  <div class="teaser-box__item__box{{#if contentCenter}} teaser-box__item__box--center{{/if}}">
    <div class="teaser-box__text">
      {{#if topic}}<p class="teaser-box__topic">{{ topic }}</p>{{/if}}
      {{#if text}}{{ text }}{{/if}}
    </div>
    {{#if link}}
      <div class="teaser-box__link" {{#if link.hidden}}hidden{{/if}}>
        {{> atoms-link-button link }}
      </div>
    {{/if}}
  </div>
  {{/if}}
</div>
