{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/base/molecules/teaser-box-item.schema.json",
  "title": "Teaser-Box Item",
  "description": "teaser-box-item",
  "type": "object",
  "properties": {
    "image": { "type": "string", "default": "default/images/dummy/16-9-s.png" },
    "topic": { "type": "string" },
    "text": { "type": "string" },
    "darkStyle": { "type": "boolean" },
    "ratio": {
      "type": "string",
      "enum": ["4:3", "16:9", "1:1"],
      "default": "16:9"
    },
    "imageSpacing": {
      "type": "boolean"
    },
    "link": {
      "allOf": [
        {
          "$ref": "http://frontend.ruhmesmeile.com/base/atoms/link-button.schema.json"
        },
        {
          "properties": {
            "hidden": { "type": "boolean" }
          }
        }
      ]
    }
  }
}
