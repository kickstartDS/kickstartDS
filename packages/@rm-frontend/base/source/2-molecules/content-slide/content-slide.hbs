<div class="content-slide" data-title="{{ title }}">
  {{#if image}}
    <div class="content-slide__image">
      {{> atoms-lazy-img src=image alt="" js=slider.index }}
    </div>
  {{/if}}
  <div class="content-slide__text">
    <div class="content-slide__topic">
      Lorem Ipsum {{ @index }}
    </div>
    {{{ content }}}
    {{> atoms-link-button style="solid" label="Button"}}
  </div>
</div>
