<div class="nav-main__wrap">
  {{> atoms-nav-toggle id="toggle-sidebar" controls-id="nav-main" className="nav-main-toggle"}}
  <nav class="nav-main" id="nav-main" aria-label="Hauptnavigation" data-component="base.nav-main">
    <ul class="nav-main__list--level-1">
      {{#each main-nav}}
        <li
          class="nav-main__item nav-main__item--level-1{{#if active}} nav-main__item--active{{/if}}"
          {{#if dropdown}}
            data-component="base.dropdown"
            data-close-on-blur=""
            {{#if ../modules.base.molecules.nav-main.open-on-hover}}data-open-on-hover=""{{/if}}
          {{/if}}
        >
          {{#if dropdown}}
          <details>
            <summary>
              <div class="nav-main__item__link">
                {{label}}
                {{> atoms-icon icon="chevron-down" role="img" className="nav-main__icon" }}
              </div>
            </summary>
            <ul class="nav-main__list--level-2">
              {{#each dropdown}}
              <li class="nav-main__item--level-2{{#if current}} nav-main__item--current{{/if}}{{#if active}} nav-main__item--active{{/if}}">
                <a href="{{@root.url}}" class="nav-main__item__link" tabindex="0">
                  {{label}}
                  {{#if dropdown}}{{> atoms-icon icon="chevron-right" role="img" className="nav-main__icon" }}{{/if}}
                </a>
                {{#if dropdown}}
                <ul class="nav-main__list--level-3">
                  {{#each dropdown}}
                  <li class="nav-main__item--level-3{{#if current}} nav-main__item--current{{/if}}{{#if active}} nav-main__item--active{{/if}}">
                    <a href="{{@root.url}}" class="nav-main__item__link" tabindex="0">{{label}}</a>
                  </li>
                  {{/each}}
                </ul>
                {{/if}}
              </li>
              {{/each}}
            </ul>
          </details>
          {{else}}
            {{#if search}}
              {{#if (module 'search')}}
              <a href="{{ link.templates-search }}" class="nav-item-search nav-main__item__link" tabindex="0">
                {{label}}
                {{> atoms-icon icon="search" }}
              </a>
              {{/if}}
            {{else}}
            <a href="{{@root.url}}" class="nav-main__item__link">{{label}}</a>
            {{/if}}
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </nav>
</div>