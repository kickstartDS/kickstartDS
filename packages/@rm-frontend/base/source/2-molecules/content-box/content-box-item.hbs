<div class="content-box__item">
  <div class="content-box__item__image{{#if (comp ratio "===" "4:3")}} content-box__item__image--four-to-three{{/if~}}
    {{~#if (comp ratio "===" "16:9")}} content-box__item__image--sixteen-to-nine{{/if~}}
    {{~#if (comp ratio "===" "1:1")}} content-box__item__image--square{{/if~}}
    {{~#if alignement}} content-box__item__image--align-{{alignement}}{{/if}}">
    <figure>
      {{> atoms-lazy-img
        src=image
        style=(comp (comp width "||" height) "&&" (concat "width:" width "px; height:" height "px;"))
        objectFit=true
      }}
    </figure>
  </div>
  <div class="content-box__item__box">
    <div class="content-box__text">
      <p class="content-box__topic">{{ default topic "Lorem Ipsum" }}</p>

      <p class="content-box__text__item">
        {{ default text "Lorem ipsum dolor sit amet, consectetur adipisicing." }}
      </p>
    </div>
    <div class="content-box__link">
      {{> atoms-link-button style="solid" label="Link Button" }}
    </div>
  </div>
</div>
