<div
  class="tag-label {{concat " tag-label--" (default size 'm')}}"
  {{#if removable}}data-component="base.tag-label"{{/if}}
>
  {{#if link}}
    <a class="tag-label__content" href="{{link}}">{{default label 'Lorem Ipsum'}}</a>
  {{else}}
    <span class="tag-label__content">{{default label 'Lorem Ipsum'}}</span>
  {{/if}}
  {{#if removable}}
    <button class="tag-label__remove-btn" title="entfernen">
      {{> atoms-icon icon="close" role="none"}}
    </button>
  {{/if}}
</div>