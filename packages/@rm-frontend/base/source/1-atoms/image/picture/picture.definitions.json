{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/base/atoms/picture.definitions.json",
  "title": "Picture",
  "description": "Picture",
  "type": "object",
  "properties": {
    "src": {
      "type": "string",
      "title": "Image Source",
      "description": "Image Source",
      "format": "image",
      "default": "images/dummy/16-9-l.png"
    },
    "srcSet": {
      "type": "string",
      "title": "Image Sourceset",
      "description": "Image Sourceset",
      "format": "image"
    },
    "alt": {
      "type": "string",
      "title": "Alt text",
      "description": "Alt text"
    },
    "width": {
      "title": "Width",
      "description": "Width",
      "type": "integer",
      "minimum": 0,
      "default": 900
    },
    "height": {
      "title": "Height",
      "description": "height",
      "type": "integer",
      "minimum": 0,
      "default": 506
    },
    "className": {
      "type": "string",
      "title": "Class",
      "description": "Image Class"
    },
    "id": {
      "type": "string",
      "title": "ID",
      "description": "ID"
    },
    "itemProp": {
      "type": "string",
      "title": "Itemprop",
      "description": "Itemprop"
    },
    "style": {
      "type": "object",
      "title": "Style",
      "description": "Style"
    },
    "objectFit": {
      "title": "Object fit",
      "description": "Object fit",
      "type": "string",
      "enum": ["contain", "cover", "fill", "none", "scale-down"],
      "default": "none"
    },
    "noscript": {
      "title": "Render noscript fallback",
      "description": "Render noscript fallback",
      "type": "boolean",
      "default": true
    },
    "lazy": {
      "title": "Lazy",
      "description": "Load Image Lazily",
      "type": "boolean",
      "default": true
    },
    "sources": {
      "title": "Sources",
      "description": "Additional sources. This will result in a `picture`-Element",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "srcSet": {
            "type": "string"
          },
          "media": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      }
    },
    "pictureClassName": {
      "type": "string",
      "title": "Picture Class"
    }
  }
}
