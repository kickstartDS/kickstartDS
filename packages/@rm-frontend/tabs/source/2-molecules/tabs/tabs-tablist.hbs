<div class="tabs__tablist-wrapper">
  <ul class="tabs__tablist" role="tablist">
    {{#each tabs}}
      <li role="presentation">
        <a href="#{{panel-id}}" class="tabs__tab" role="tab" aria-controls="{{panel-id}}" id="{{tab-id}}"
          {{#if @first}}aria-selected="true" {{/if}}>

          {{#if icon}}
            <div class="tabs__icon">
              {{> atoms-icon }}
            </div>
          {{/if}}
          
          {{content}}
        </a>
      </li>
    {{/each}}
  </ul>
</div>
