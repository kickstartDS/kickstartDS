<div class="location-finder-form" novalidate="novalidate">
  <div class="location-finder-wrap">
    <form action="#" method="post">

      <div class="form-row form-row--select">
        <label class="form-label" for="country-125">
          Land
        </label>
        <select class="select-field location-finder-form__select-country" id="country-125"
                name="tx_rmlocationfinder_pilocationfinderresult[request][country]">
          <option value="Deutschland" selected="selected">Deutschland</option>
          <option value="Frankreich">Frankreich</option>
          <option value="Spanien">Spanien</option>
          <option value="Italien">Italien</option>
        </select>
      </div>

      <div class="float-label form-row">
        {{> atoms-input label=(object inline=true class="float-label__label" content="Stra√üe / Hausnummer")
        class="float-label__field" type="text" id="a_cart_name" name="a_cart_name" placeholder=" "}}
      </div>


      <div class="form-row form-row--70-30">
        <div class="form-column">
          <div class="float-label">
            {{> atoms-input label=(object inline=true class="float-label__label" content="Stadt")
            class="float-label__field" type="text" id="a_cart_name" name="a_cart_name" placeholder=" "}}
          </div>
        </div>

        <div class="form-column">
          <div class="float-label">
            {{> atoms-input label=(object inline=true class="float-label__label" content="PLZ")
            class="float-label__field" type="text" id="a_cart_name" name="a_cart_name" placeholder=" "}}
          </div>
        </div>
      </div>


      <div class="form-row form-row--50-50">
        {{> atoms-select-input select-radius }}
        <div class="form-column">
          {{> atoms-button id="location-finder-form-submit-" label="Senden" type="submit" style="solid"}}
        </div>
      </div>

    </form>
  </div>
</div>
