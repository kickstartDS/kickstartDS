<div class="business-card__item">
  {{#if image}}
    {{> atoms-lazy-img src=image alt="" class="business-card__item__image"}}
  {{/if}}
  <div class="business-card__item__box">
    <div class="business-card__text">
      <img src="{{@root.asset_paths.images}}/{{ logo }}" class="business-card__logo" alt="">
      <p class="business-card__topic">{{ default topic "Lorem Ipsum" }}</p>
      <div class="business-card__text__item">
        {{{ address }}}
      </div>
      <div class="business-card__contact-person">
        <div class="business-card__contact-person__img">
          <img src="{{@root.asset_paths.images}}/{{ contactPersonImage }}" alt="">
        </div>
        <div class="business-card__contact-person__name">
          {{ name }}
        </div>
      </div>
      <ul class="business-card__contact">
        <li>
          <a href="tel:00492211234560" title="Unsere Telefon-Nummer" itemprop="telephone" content="00492211234560">
            {{> atoms-icon icon="phone" role="img" className="business-card__contact__icon" }}
            {{ phone }}
          </a>
        </li>
        {{#if email}}
          <li>
            <a href="mailto:mail@domainname.de" title="Unsere Email-Adresse" itemprop="email">
              {{> atoms-icon icon="email" role="img" className="business-card__contact__icon" }}
              {{ email }}
            </a>
          </li>
        {{/if}}
      </ul>
    </div>
    <div class="business-card__link">
      {{#if button1}}
        {{> atoms-link-button style="outline" label="Info"}}
      {{/if}}
      {{#if button2}}
        {{> atoms-link-button style="outline" label="Karte"}}
      {{/if}}
    </div>
  </div>
</div>
