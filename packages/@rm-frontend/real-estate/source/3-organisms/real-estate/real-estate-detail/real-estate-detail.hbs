{{#> base-section}}
  <div class="real-estate-detail">
    <div class="real-estate-detail__content">
      {{#each (slice real-estate-items 0 1)}}
        <div class="real-estate-detail__section">
          {{> molecules-slider
            slides=images
            className="real-estate-image-slider"
            component="base.slider"
            arrows="inner"
          }}
        </div>

        <div class="real-estate-detail__section">
          <h1>{{ title }}</h1>
          {{> molecules-real-estate-attributes-primary }}
        </div>

        <div class="real-estate-detail__section">
          <h2>Eigenschaften</h2>
          {{> molecules-real-estate-attributes-secondary }}
        </div>

        <div class="real-estate-detail__section">
          <h2>Beschreibung</h2>
          <p>{{ description }}</p>
        </div>

        <div class="real-estate-detail__section">
          <h2>Ausstattung</h2>
          {{> molecules-real-estate-attributes-list }}
        </div>

        <div class="real-estate-detail__section" id="address">
          <h2>Adresse</h2>
          {{> molecules-real-estate-location }}
        </div>
      {{/each}}

      <div class="no-print real-estate-detail__section">
        <h2>Downloads</h2>
        <div class="download">
          {{#each (slice download 0 3)}}
            {{> molecules-download-item this }}
          {{/each}}
        </div>
      </div>

      <div class="real-estate-detail__section real-estate-detail__more">
        {{> atoms-link-button label="Zur Ãœbersichtsseite" style="outline"}}
      </div>
    </div>

    <div class="real-estate-detail__sidebar">
      {{> molecules-real-estate-actions }}
    </div>
  </div>
{{/base-section}}
