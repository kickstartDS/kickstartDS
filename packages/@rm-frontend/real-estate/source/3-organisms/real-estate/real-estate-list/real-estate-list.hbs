{{#> base-section}}
  <form class="real-estate-list" method="GET">
    {{#> molecules-filter-area toggle="Filter" class="real-estate-list__sidebar"}}
      {{> molecules-real-estate-filter }}
    {{/molecules-filter-area}}

    <div class="real-estate-list__content">

      {{#> molecules-real-estate-list-meta}}
        <div>427 Objekte</div>
        {{> atoms-real-estate-sort }}
      {{/molecules-real-estate-list-meta}}

      <div class="real-estate-cards real-estate-cards--list">

        {{> organisms-real-estate-card-items }}

      </div>

      <!-- Pagination -->
      {{try "molecules-pagination" }}

      {{> molecules-real-estate-btn-print }}

    </div>
  </form>
{{/base-section}}
