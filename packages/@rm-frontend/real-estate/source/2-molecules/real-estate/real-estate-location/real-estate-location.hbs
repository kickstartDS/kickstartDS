<div class="real-estate-location">
  {{> molecules-location-map lat=location.lat long=location.long }}

  <div class="real-estate-location__address">
    <div class="real-estate-location__address__icon">
      {{> atoms-icon icon="map" }}
    </div>
    <div class="real-estate-location__address__data">
      {{ location.street_address }}, {{ location.zipcode }} {{ location.city }}
    </div>
  </div>

</div>