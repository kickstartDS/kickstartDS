<div class="real-estate-card" data-component="real-estate.real-estate-card" data-estate-id="{{id}}">
  <div class="real-estate-card__inner">

    <div class="real-estate-card__content">

      <div class="real-estate-card__preview">
        <div class="real-estate-card__preview__inner">
          {{#if image}}
            <img src="{{@root.asset_paths.images}}/{{ image }}" alt="">
            {{else}}
            <img src="{{@root.asset_paths.images}}/real-estate/placeholder.svg" alt="" class="real-estate-placehoderimage">
          {{/if}}
        </div>
      </div>

      <div class="real-estate-card__body">
        <div class="real-estate-card__body__header">
          <div class="real-estate-card__title">
            {{ title }}
          </div>
        </div>

        <div class="real-estate-card__body__content">
          <div class="real-estate-card__attributes">
            <div class="real-estate-card__attributes__primary">
              <dl>
                <dt>{{ attributes.price }}</dt>
                <dd>Kaltmiete</dd>
              </dl>
            </div>
            <div class="real-estate-card__attributes__primary">
              <dl>
                <dt>{{ attributes.additionalcost }}</dt>
                <dd>Nebenkosten</dd>
              </dl>
            </div>
            <div class="real-estate-card__attributes__primary">
              <dl>
                <dt>{{ attributes.size }}</dt>
                <dd>Wohnfl√§che</dd>
              </dl>
            </div>
            <div class="real-estate-card__attributes__primary">
              <dl>
                <dt>{{ attributes.rooms }}</dt>
                <dd>Zi.</dd>
              </dl>
            </div>
          </div>

          <div class="real-estate-card__attributes">
            <div class="real-estate-card__attributes__secondary">
              {{> atoms-icon icon="bed" }}
              {{ attributes.bedrooms }}
            </div>
            <div class="real-estate-card__attributes__secondary">
              {{> atoms-icon icon="bath" }}
              {{ attributes.baths }}
            </div>
            <div class="real-estate-card__attributes__secondary">
              {{> atoms-icon icon="place" }}
              {{ attributes.location }}
            </div>
          </div>

        </div>
      </div>

      <div class="real-estate-card__footer">
        <div class="real-estate-card__more">
          {{> atoms-link-button label="zum Angebot" style="solid"}}
        </div>
          <button type="button" class="button button--outline real-estate-card__toggle-favourite" aria-pressed="false" data-component="real-estate.shortlist-toggle">
            {{> atoms-icon icon="star" className="real-estate-card__toggle-favourite__icon-active"}}
            {{> atoms-icon icon="star-outline" className="real-estate-card__toggle-favourite__icon-inactive"}}
          </button>
      </div>

    </div>

  </div>
</div>
