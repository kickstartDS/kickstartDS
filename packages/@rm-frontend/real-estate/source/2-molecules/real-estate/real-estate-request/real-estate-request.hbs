<div class="real-estate-request">
  <div class="real-estate-request__summary">
    <div>
      <img src="{{@root.asset_paths.images}}/{{image}}">
    </div>
    <div>
      <h2 class="real-estate-request__title">{{title}}</h2>
      <h3 class="real-estate-request__date-range-title">Mietzeitraum:</h3>
      <table class="real-estate-request__date-range">
        <tr>
          <th>von:</th>
          <td>{{date-range.from}}</td>
        </tr>
        <tr>
          <th>bis:</th>
          <td>{{date-range.to}}</td>
        </tr>
      </table>
    </div>
  </div>

  <form action="#" class="lazyload" data-component="base.form" data-url="/api/real-estate/{{endpoint}}">
    <div class="form-row form-row--notification"></div>
    <fieldset>
      <div class="form-row">
        <div class="real-estate-request__name-row">
          <div>
            <div class="float-label">
              {{> atoms-input class="float-label__field" type="text" id="lastname" name="lastname" placeholder=" " required=true
                label=(object inline=true class="float-label__label" content="Name*")
              }}
            </div>
          </div>
          <div>
            <div class="float-label">
              {{> atoms-input label=(object inline=true class="float-label__label" content="Vorname*")
                class="float-label__field" type="text" id="firstname" name="firstname" placeholder=" " required=true}}
            </div>
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="float-label">
          {{> atoms-input label=(object inline=true class="float-label__label" content="E-Mail-Adresse")
            class="float-label__field" type="text" id="email" name="email" placeholder=" "}}
        </div>
      </div>

      <div class="form-row form-controls">
        <div class="form-legend">* Pflichtfelder</div>
        {{> atoms-button label="Absenden" type="submit" style="solid"}}
      </div>
    </fieldset>
  </form>
</div>