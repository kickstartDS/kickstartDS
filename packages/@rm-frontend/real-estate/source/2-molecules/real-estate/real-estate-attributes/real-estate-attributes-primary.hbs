<div class="real-estate-attributes-primary">
  <div class="real-estate-attributes-primary__item">
    <dl>
      <dt>{{ attributes.price }}</dt>
      <dd>Kaltmiete</dd>
    </dl>
  </div>
  <div class="real-estate-attributes-primary__item">
    <dl>
      <dt>{{ attributes.additionalcost }}</dt>
      <dd>Nebenkosten</dd>
    </dl>
  </div>
  <div class="real-estate-attributes-primary__item">
    <dl>
      <dt>{{ attributes.size }}</dt>
      <dd>Wohnfläche</dd>
    </dl>
  </div>
  <div class="real-estate-attributes-primary__item">
    <dl>
      <dt>{{ attributes.rooms }}</dt>
      <dd>Zi.</dd>
    </dl>
  </div>
</div>


<div class="real-estate-attributes-primary-data">
  <div class="real-estate-attributes-primary-data__item">
    <div>
      <table>
        <tr>
          <td>Typ:</td>
          <td>{{ attributes.type_property }}</td>
        </tr>
        <tr>
          <td>Etage:</td>
          <td>{{ attributes.floor_number }}</td>
        </tr>
        <tr>
          <td>Zimmer:</td>
          <td>{{ attributes.rooms }}</td>
        </tr>
        <tr>
          <td>Wonfläche:</td>
          <td>{{ attributes.size }}</td>
        </tr>
        <tr>
          <td>Grundstück:</td>
          <td>{{ attributes.property_area }}</td>
        </tr>
        <tr>
          <td>Kaltmiete:</td>
          <td>{{ attributes.price }}</td>
        </tr>
        <tr>
          <td>Nebenkosten:</td>
          <td>{{ attributes.additionalcost }}</td>
        </tr>
        <tr>
          <td>Mindestmietdauer:</td>
          <td>{{ attributes.min_rental_period }}</td>
        </tr>
      </table>
    </div>
  </div>
  <div class="real-estate-attributes-primary-data__item real-estate-attributes-primary-data__item--address">
    <div class="real-estate-attributes-primary-data__item__icon">
      {{> atoms-icon icon="map" }}
    </div>
    <div>
      {{ location.street_address }}
      <br>
      {{ location.zipcode }} {{ location.city }}
      <br>
      <a href="#address">
        Auf Karte anzeigen
      </a>
    </div>
  </div>
</div>