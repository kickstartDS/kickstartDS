<div class="contact">
  <div class="contact__wrap">
    <div class="contact__context">
      <div class="contact__context__wrap">
        <img src="{{@root.asset_paths.images}}/dummy/1-1-s.png" alt="Portrait von Shaun dem Schaf">
        <div class="contact__context__text">
          <p><b>Shaun das Schaf</b><br>Position</p>
          <p>Tel. 02345 123 456 789<br>shaun@sheepstreet.de</p>
        </div>
      </div>
    </div>
    <form action="#" class="contact__form contact-form lazyload" data-component="base.form" data-url="/api/contact-form/error">
      <div class="form-row form-row--notification"></div>
      <fieldset>

        <div class="form-row">
          {{> atoms-input label=(object top=true class="form-label" content="Name" )type="text" id="name-c{{ id }}" name="name"}}
        </div>

        <div class="form-row">
          {{> atoms-input label=(object top=true class="form-label" content="Stra√üe" )type="text" id="strasse-c" name="strasse" }}
        </div>


        <div class="contact-form-expanded--location">
          <div class="form-row">
            {{> atoms-input label=(object top=true class="form-label" content="PLZ" )type="text" id="plz-c" name="plz" }}
          </div>
          <div class="form-row">
            {{> atoms-input label=(object top=true class="form-label" content="Ort" )type="text" id="ort-c" name="ort" }}
          </div>
        </div>

        <div class="form-row">
          {{> atoms-input label=(object top=true class="form-label" content="Email*") type="email" id="email-c" name="email" required="required"}}
        </div>

        <div class="form-row">
          {{> atoms-textarea label=(object top=true class="form-label" content="Nachricht*") id="nachricht-c" name="nachricht" required="required"}}
        </div>

        <div class="form-row form-controls">
          <div class="form-legend">* Pflichtfelder</div>
          {{> atoms-button label="Absenden" type="submit" style="solid"}}
        </div>

      </fieldset>
    </form>
  </div>
</div>