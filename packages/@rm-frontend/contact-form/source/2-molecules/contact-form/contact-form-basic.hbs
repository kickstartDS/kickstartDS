<div class="contact">
  <div class="contact__wrap">
    <form action="#" class="contact-form lazyload" data-component="base.form" data-url="/api/contact-form/success">
      <div class="form-row form-row--notification"></div>
      <fieldset>

        <div class="contact__form__row">
          <div class="contact__form__column">

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Name") type="text" id=name-c-id name="name"}}
            </div>

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Email*") type="email" id=email-c-id name="email" required="required"}}
            </div>

            <div class="form-row">
              {{> atoms-textarea label=(object top=true class="form-label" content="Nachricht*") id=nachricht-c-id name="nachricht" required="required"}}
            </div>

            <div class="form-row form-controls">
              <div class="form-legend">* Pflichtfelder</div>
              {{> atoms-button label="Absenden" type="submit" style="solid"}}
            </div>

          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>