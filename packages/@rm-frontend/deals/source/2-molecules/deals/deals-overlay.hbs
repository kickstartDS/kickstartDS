<div class="overlay" tabindex="-1" role="dialog" hidden="true" data-component="base.overlay">
  <div class="overlay__inner">
    {{> atoms-button type="button" className="overlay__close" icon=(object icon="close" role="img")}}
    <div class="overlay__content">
      <div class="deals__overlay">
        <h2>{{ overlay-headline }}</h2>
        <p>{{ overlay-text }}</p>

        <form action="#" class="deals__form lazyload" data-component="base.form" data-url="/api/deals/{{data-url}}">
          <div class="form-row form-row--notification"></div>
          <fieldset>

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Name*") type="text" id="name" name="name" required="required"}}
            </div>

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Firma*") type="text" id="company" name="company" required="required"}}
            </div>

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Email*") type="email" id="email" name="email" required="required"}}
            </div>

            <div class="form-row">
              {{> atoms-input label=(object top=true class="form-label" content="Telefonnummer*") type="text" id="phone" name="phone" required="required"}}
            </div>

            <div class="form-row form-controls">
              <div class="form-legend">* Pflichtfelder</div>
              {{> atoms-button style="outline-inverted" label="Absenden" type="submit"}}
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>