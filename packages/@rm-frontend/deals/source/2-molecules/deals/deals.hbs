<div class="deals" data-component="deals.deals">
  <div class="deals__item {{ size }}">

    <div class="deals__item__wrap" {{#if bg-color}}style="background:{{ bg-color }};"{{/if}}>

      {{#if bg-image}}
        <div class="deals__item__background">
          <picture>
            <source media="(min-width: 1000px)" srcset="{{@root.asset_paths.images}}/{{ bg-image-desktop }}">
            <source media="(min-width: 600px)" srcset="{{@root.asset_paths.images}}/{{ bg-image-tablet }}">
            <source srcset="{{@root.asset_paths.images}}/{{ bg-image-mobile }}">
            <img src="{{@root.asset_paths.images}}/{{ bg-image-desktop }}" alt="" data-object-fit>
          </picture>
        </div>
      {{/if}}

      <div class="l-main-wrap">
        <div class="deals__content {{ content-direction }}">

          {{#if content-image}}
            <div class="deals__content__image">
              <img src="{{@root.asset_paths.images}}/{{ content-image }}" alt="">
            </div>
          {{/if}}

          <div class="deals__content__box">

            {{#if content-headline}}
              <p class="deals__topic" {{#if content-headline-color}}style="color:{{ content-headline-color }};"{{/if}}>{{ content-headline }}</p>
            {{/if}}

            {{#if content-text}}
              <div class="deals__text" {{#if content-text-color}}style="color:{{ content-text-color }};"{{/if}}>
                <p>{{ content-text }}</p>
              </div>
            {{/if}}

            <div class="deals__button">
              {{> atoms-button style="solid" className="button--deals" label="Lorem Ipsum"}}
            </div>

            {{> molecules-deals-overlay }}

          </div>
        </div>
      </div>

    </div>

  </div>
</div>
