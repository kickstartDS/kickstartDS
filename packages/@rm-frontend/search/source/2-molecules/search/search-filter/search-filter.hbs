{{#> molecules-filter-area toggle="Suche Filtern" component="search.filter"}}
  {{#if in-use}}
  <div class="search__faceting__in-use">
    <div class="search-filter__row">
      <header class="section-headline search-filter__headline">
        Aktive Filter
      </header>
    </div>
    <div class="search-filter__row">
      <ul class="search-filter__facets">
        <li class="search-filter__facet">
          <a class="facet remove-facet-option solr-ajaxified" href="{{url}}">
            Seiten
            <span class="facet-result-count">(113)</span>
            <span class="search-filter__facet__reset">
              {{> atoms-icon icon="close" role="img" }}
            </span>
          </a>
        </li>
        <li class="search-filter__facet">
          <a class="facet remove-facet-option solr-ajaxified" href="{{url}}">
            News
            <span class="facet-result-count">(25)</span>
            <span class="search-filter__facet__reset">
              {{> atoms-icon icon="close" role="img" }}
            </span>
          </a>
        </li>
        <li class="facets-remove-all">
          {{> atoms-link-button style="solid" label="Alle Filter entfernen" className="solr-ajaxified"}}
        </li>
      </ul>
    </div>
  </div>
  {{/if}}

  <div class="search__faceting__main">
    <div class="search-filter__row">
      <header class="section-headline search-filter__headline">
        Suchfilter
      </header>
    </div>
    <div class="search-filter__row">
      <ul class="search-filter__facets">
        <li class="facet facet-type facet-type-options">
          <ul class="facet-option-list facet-type-options fluidfacet" data-facet-label="" data-facet-name="type">
            <li class="search-filter__facet" data-facet-item-value="pages">
              <a class="facet solr-ajaxified" href="{{url}}">
                Seiten
                <span class="facet-result-count">(113)</span>
              </a>
            </li>
            <li class="search-filter__facet" data-facet-item-value="pages">
              <a class="facet solr-ajaxified" href="{{url}}">
                News
                <span class="facet-result-count">(25)</span>
              </a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
{{/molecules-filter-area}}
