{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/form/atoms/select-field.schema.json",
  "title": "Select Field",
  "description": "Input that allow users to select a single option from a list of mutually exclusive options.",
  "type": "object",
  "properties": {
    "label": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/label"
    },
    "value": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/value"
    },
    "name": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/name"
    },
    "disabled": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/disabled"
    },
    "options": {
      "title": "Options",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "selected": {
            "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/selected"
          },
          "disabled": {
            "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/disabled"
          }
        },
        "required": ["label"]
      },
      "default": [
        { "label": "Choose an option", "disabled": true, "selected": true },
        { "label": "CSS" },
        { "label": "JavaScript" },
        { "label": "HTML" },
        { "label": "SVG" },
        { "label": "ARIA" },
        { "label": "MathML" },
        { "label": "SCSS" },
        { "label": "React" }
      ]
    },
    "hideLabel": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/hideLabel"
    },
    "invalid": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/invalid"
    },
    "invalidMessage": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/invalidMessage"
    },
    "hint": {
      "$ref": "http://frontend.ruhmesmeile.com/form/atoms/input.definitions.json#/definitions/hint"
    },
    "filter": {
      "title": "Add a filter input",
      "type": "boolean",
      "default": false
    },
    "filterPlaceholder": {
      "title": "Placeholder for empty filter input",
      "type": "string",
      "default": "Choose an option"
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the select element",
      "type": "string"
    }
  }
}
