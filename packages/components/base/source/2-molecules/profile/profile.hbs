<div class="profile">
  <div class="profile__wrapper">
    {{#if image}}
    <div class="profile__image">
      <img src="{{@root.asset_paths.images}}{{image}}" alt="">
    </div>
    {{/if}}
    <div class="profile__content">
      <span class="profile__content--job-description">{{job-description}}</span>
      <span class="profile__content--name">{{name}}</span>
      <span class="profile__content--titel">{{academic-degree}}</span>
    </div>
  </div>
  {{#if profile-info-text}}
  <div class="profile__info-text">
    {{profile-info-text}}
  </div>
  {{/if}}
</div>

