{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json",
  "title": "Headline",
  "description": "Headline",
  "type": "object",
  "properties": {
    "level": {
      "title": "Headline Level",
      "description": "Headline Level",
      "type": "string",
      "enum": ["h1", "h2", "h3", "h4", "h5", "p"],
      "default": "h2"
    },
    "align": {
      "title": "Text Align",
      "description": "Text Align",
      "type": "string",
      "enum": ["left", "center", "right"],
      "default": "center"
    },
    "content": {
      "title": "Headline Text",
      "description": "Headline Text",
      "type": "string",
      "default": "Headline"
    },
    "subheadline": {
      "title": "Subheadline Text",
      "description": "Subheadline Text",
      "type": "string",
      "default": ""
    },
    "spaceAfter": {
      "title": "Bottom Spacing",
      "description": "Bottom Spacing",
      "type": "string",
      "enum": ["none", "small", "large"],
      "default": "none"
    },
    "pageHeader": {
      "title": "Page Header",
      "description": "Page Header",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["level", "content"]
}
