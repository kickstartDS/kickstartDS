<label class="form-label" for="{{default from.id "date-range--start"}}">{{ default label "Zeitraum"}}</label>
<div class="date-range" data-component="base.date-range-picker">
  <div>
    {{> atoms-datepicker
      label=(object inline=true content=(default from.label "von"))
      name=(default from.name "date-from")
      id=(default from.id "date-range--start")
    }}
  </div>
  <div>
    {{> atoms-datepicker
      label=(object inline=true content=(default to.label "bis"))
      name=(default to.name "date-to")
      id=(default to.id "date-range--end")
    }}
  </div>
</div>