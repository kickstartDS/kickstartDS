<div class="overlay-dialog">
  {{> atoms-button
    type="button"
    className="overlay__close"
    icon=(object icon="close" role="img")
  }}
  {{#if @partial-block}}
  <div class="overlay-dialog__body">
    {{> @partial-block }}
  </div>
  {{/if}}
  {{#if actions}}
  <div class="overlay-dialog__footer">
    <div class="overlay-dialog__actions">
      {{#each actions}}
      <div class="overlay-dialog__action">
        {{> atoms-button}}
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>