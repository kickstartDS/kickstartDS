<img
  data-src="{{@root.asset_paths.images}}/{{src}}"
  {{~#if srcset}} data-srcset="{{srcset}}" {{/if~}}
  alt="{{alt}}"
  class="lazyload {{class}}"
  {{~#if objectFit}} data-object-fit {{/if~}}
  {{~#if width}} width="{{width}}" {{/if~}}
  {{~#if height}} height="{{height}}" {{/if~}}
  {{~#if id}} id="{{id}}" {{/if~}}
  {{~#if itemprop}} itemprop="{{itemprop}}" {{/if~}}
  {{~#if style}} style="{{style}}" {{/if~}}
>
{{#unless js}}
<noscript>
  <img
    src="{{@root.asset_paths.images}}/{{src}}"
    {{~#if srcset}} srcset="{{srcset}}" {{/if~}}
    alt="{{alt}}"
    class="{{class}}"
    {{~#if width}} width="{{width}}" {{/if~}}
    {{~#if height}} height="{{height}}" {{/if~}}
    {{~#if style}} style="{{style}}" {{/if~}}
  >
</noscript>
{{/unless}}
