<div
  class="{{wrapper.class}} form-row--select"
  {{~#if data}} data-component="base.select-input"{{/if~}}
  {{~#each data}} data-{{@key}}="{{this}}"{{/each~}}
>
  {{#if label}}
  <label class="form-label{{#if label.hidden}} form-label--hidden{{/if}}" for="{{id}}">{{label.content}}</label>
  {{/if}}
  <select class="select-field {{class}}" name="{{name}}" id="{{id}}"{{#if required}} required="required"{{/if}}>
    {{#each options}}
    <option value="{{value}}" {{#if disabled}}disabled="disabled"{{/if}} {{#if selected}}selected="selected"{{/if}}>
      {{content}}
    </option>
    {{/each}}
  </select>
  {{#if (comp class "==" "form-item--error")}}
    <span id="{{id}}-error" class="form-item--error">Dieses Feld ist ein Pflichtfeld.</span>
  {{/if}}
</div>