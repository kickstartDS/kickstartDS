<div class="input-field-wrap {{#if label.inline}}float-label{{/if}} lazyload" data-component="base.datepicker"
  {{#if min}}data-min="{{min}}"{{/if}}
  {{#if max}}data-max="{{max}}"{{/if}}
  {{#if date-ranges}}data-date-ranges="{{date-ranges}}" {{/if}}>
  {{#if (comp label.inline "&&" label.content)}}
  {{> atoms-input
      label=(merge label (object class="float-label__label"))
      placeholder=label.content
      class="float-label__field"
      name=""
      autocomplete="off"
      type="text"
    }}
  {{else}}
    {{> atoms-input
      class=""
      name=""
      autocomplete="off"
      type="text"
    }}
  {{/if}}
  {{> atoms-button
    type="button"
    className="datepicker__clear-button"
    icon=(object icon="close" role="img")
    id=""
    name=""
  }}
  <input class="datepicker__value" type="hidden" name="{{name}}" value="{{initialValue}}">
</div>