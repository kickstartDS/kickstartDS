<button
  class="button button--{{default variant 'solid'}}
    {{~#if fillAnimation}} button--fill-animation {{/if~}}
    {{~#if iconAnimation}} button--icon-animation {{/if~}}
    {{~#if size}} button--{{size}} {{/if~}}
    {{~#if isLoading}} button--is-loading {{/if~}}
    {{~#if isSuccessful}} button--is-successful {{/if~}}
    {{~#if className}} {{className}} {{/if~}}
  "

  type="{{default type "button"}}"
  {{#if id}}id="{{id}}"{{/if}}
  {{#if name}} name="{{name}}"{{/if}}
  {{#if dataComponent}} data-component="{{dataComponent}}"{{/if}}
  {{#if disabled}}disabled=""{{/if}}
  {{#if onclick}}onclick="{{onclick}}"{{/if}}
  {{#if value}} value="{{value}}"{{/if}}>

  {{#if label}}
    {{#if (comp icon '&&' iconBefore)}}
      {{> atoms-icon icon}}
    {{/if}}

    <span>{{label}}</span>

    {{#if (comp icon '&&' iconAfter)}}
      {{> atoms-icon icon }}
    {{/if}}
  {{else if icon}}
    {{> atoms-icon icon}}
  {{/if}}

</button>
