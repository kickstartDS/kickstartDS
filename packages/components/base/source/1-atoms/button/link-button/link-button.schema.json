{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/base/link-button.schema.json",
  "title": "Link Button",
  "description": "link-button",
  "type": "object",
  "definitions": {
    "href": {
      "type": "string",
      "title": "Button href?",
      "description": "Link used for button",
      "format": "uri",
      "default": "https://example.com"
    },
    "newTab": {
      "type": "boolean",
      "title": "Open link in new Tab",
      "description": "Open link in new Tab",
      "default": false
    }
  },
  "properties": {
    "label": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/label"
    },
    "variant": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/variant"
    },
    "size": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/size"
    },
    "className": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/className"
    },
    "icon": {
      "$ref": "http://schema.kickstartds.com/base/icon.definitions.json"
    },
    "iconBefore": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/iconBefore"
    },
    "iconAfter": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/iconAfter"
    },
    "dataComponent": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/dataComponent"
    },
    "fillAnimation": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/fillAnimation"
    },
    "iconAnimation": {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json#/definitions/iconAnimation"
    },
    "href": {
      "$ref": "#/definitions/href"
    },
    "newTab": {
      "$ref": "#/definitions/newTab"
    },
    "inverted": {
      "type": "boolean",
      "title": "Inverted"
    }
  },
  "required": ["label", "variant", "size", "href"],
  "additionalProperties": false
}
