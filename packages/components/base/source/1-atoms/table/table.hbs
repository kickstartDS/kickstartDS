<div class="table {{#if scrolling}}table--scrolling{{/if}} {{#if responsive}}table--responsive{{/if}}" {{#if responsive}}data-component="base.responsive-table"{{/if}}>
  <table>
    {{#if caption}}<caption>{{caption}}</caption>{{/if}}
    {{#if (comp header "===" "row")}}
      <thead>
        {{#each content}}
          {{#if @first}}
            <tr>
              {{#each this}}<th>{{this}}</th>{{/each}}
            </tr>
          {{/if}}
        {{/each}}
      </thead>
    {{/if}}
    <tbody>
      {{#each content}}
        {{#if (comp ../header "===" "row")}}
          {{#unless @first}}
            <tr>
              {{#each this}}<td>{{this}}</td>{{/each}}
            </tr>
          {{/unless}}
        {{else}}
          <tr>
            {{#if (comp ../header "===" "col")}}
              {{#each this}}
                {{#if @first}}
                  <th>{{this}}</th>
                {{else}}
                  <td>{{this}}</td>
                {{/if}}
              {{/each}}
            {{else}}
              {{#each this}}<td>{{this}}</td>{{/each}}
            {{/if}}
          </tr>
        {{/if}}
      {{/each}}
    </tbody>
  </table>
</div>
