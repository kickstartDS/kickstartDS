{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/base/contact.schema.json",
  "title": "Contact",
  "description": "Component to show contact information",
  "type": "object",
  "properties": {
    "image": {
      "$ref": "http://schema.kickstartds.com/base/picture.definitions.json"
    },
    "title": {
      "title": "Title",
      "description": "Name, company name, etc.",
      "type": "string",
      "examples": ["Max Mütze"]
    },
    "subtitle": {
      "title": "Subtitle",
      "description": "Position, profession, department, location, etc.",
      "type": "string",
      "examples": ["Geschäftsführer"]
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "icon": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "href": {
            "type": "string",
            "format": "uri"
          },
          "newTab": {
            "title": "Open link in new Tab",
            "description": "Open link in new Tab",
            "type": "boolean",
            "default": false
          }
        }
      },
      "examples": [
        [
          {
            "icon": "phone",
            "label": "0228 / 688 966 20",
            "href": "tel:+4922868896620"
          },
          {
            "icon": "email",
            "label": "mail@example.com",
            "href": "mailto:mail@example.com"
          }
        ]
      ]
    },
    "copy": {
      "title": "Copy text",
      "type": "string"
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    }
  }
}
