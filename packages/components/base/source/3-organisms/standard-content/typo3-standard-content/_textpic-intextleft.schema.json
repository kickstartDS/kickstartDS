{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/base/organisms/_textpic-intextleft.schema.json",
  "title": "Textpic Intextleft",
  "description": "Textpic Intextleft element",
  "type": "object",
  "properties": {
    "headline": {
      "title": "Headline",
      "description": "Headline for Textpic element",
      "type": "object",
      "properties": {
        "mainheader": {
          "title": "Main Headline",
          "description": "Main Headline portion of Headline",
          "type": "string",
          "default": ""
        },
        "subheader": {
          "title": "Sub Headline",
          "description": "Sub Headline portion of Headline",
          "type": "string",
          "default": ""
        }
      },
      "required": ["mainheader", "subheader"]
    },
    "textpic": {
      "title": "Textpic",
      "description": "Textpic for Textpic element",
      "type": "object",
      "properties": {
        "image": {
          "title": "Image",
          "description": "Image for Textpic",
          "type": "string",
          "format": "image",
          "example": "dummy/64-27-l.png",
          "default": "dummy/64-27-l.png"
        },
        "caption": {
          "title": "Caption",
          "description": "Caption for Textpic",
          "type": "string",
          "default": ""
        }
      },
      "required": ["image", "caption"]
    },
    "content": {
      "title": "Content",
      "description": "Bodytext",
      "type": "string",
      "format": "markdown",
      "default": ""
    }
  },
  "required": ["headline", "textpic", "content"]
}
