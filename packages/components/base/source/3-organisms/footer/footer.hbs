{{#if modules.base.atoms.scroll-to-top}}
{{> atoms-scroll-to-top }}
{{/if}}

<footer class="main-footer">
  <div class="l-main-wrap">

    <div class="main-footer__top">
      <address class="main-footer__address" itemprop="address" itemscope="" itemtype="http://schema.org/PostalAddress" id="microdata-org-address">
        {{#if (comp (comp footer.telephone "||" footer.email) "||" footer.name)}}
        <p>
          {{#if footer.name}}
          <span itemprop="name" class="main-footer__address__company">{{footer.name}}</span><br>
          {{/if}}
          {{#if footer.telephone}}
          <a href="tel:00492211234560" title="Unsere Telefon-Nummer" itemprop="telephone" content="00492211234560" class="main-footer__tel">{{footer.telephone}}</a><br>
          {{/if}}
          {{#if footer.email}}
          <a href="mailto:{{footer.email}}" title="{{footer.email}}" itemprop="email">{{footer.email}}</a>
          {{/if}}
        </p>
        {{/if}}

        {{#if footer.street-address}}
        <span itemprop="streetAddress">{{footer.street-address}}</span><br>
        {{/if}}
        {{#if footer.postal-code}}
        <span itemprop="postalCode">{{footer.postal-code}}</span>&nbsp;
        {{/if}}
        {{#if footer.address-locality}}
        <span itemprop="addressLocality">{{footer.address-locality}}</span><br>
        {{/if}}
        {{#if footer.address-country}}
        <span itemprop="addressCountry">{{footer.address-country}}</span>
        {{/if}}
      </address>

      <nav class="nav-footer" aria-label="Rechtliches">
        <ul class="nav-footer__list">
          <li class="nav-footer__list__item">
            <a href="{{url}}">Kontakt</a>
          </li>
          <li class="nav-footer__list__item">
            <a href="{{url}}">Impressum</a>
          </li>
          <li class="nav-footer__list__item">
            <a href="{{url}}">Datenschutz</a>
          </li>
          <li class="nav-footer__list__item">
            <a href="/sitemap.html">Sitemap</a>
          </li>
        </ul>
      </nav>
    </div>

    <div class="main-footer__bottom">
      <nav class="nav-social" aria-label="Unsere Profile in sozialen Netzwerken">
        <ul class="nav-social__list" id="microdata-org-social">
          <li class="nav-social__list__item">
            <a href="{{url}}" title="Unsere Facebook-Seite" itemprop="sameAs">
              {{> atoms-icon icon="facebook" role="img" }}
            </a>
          </li>
          <li class="nav-social__list__item">
            <a href="{{url}}" title="Unsere Instagram-Seite" itemprop="sameAs">
              {{> atoms-icon icon="instagram" role="img" }}
            </a>
          </li>
          <li class="nav-social__list__item">
            <a href="{{url}}" title="Unser Twitter-Profil" itemprop="sameAs">
              {{> atoms-icon icon="twitter" role="img" }}
            </a>
          </li>
          <li class="nav-social__list__item">
            <a href="{{url}}" title="Unser Youtube-Profil" itemprop="sameAs">
              {{> atoms-icon icon="youtube" role="img" }}
            </a>
          </li>
          <li class="nav-social__list__item">
            <a href="{{url}}" title="Unser xing-Profil" itemprop="sameAs">
              {{> atoms-icon icon="xing" role="img" }}
            </a>
          </li>
          <li class="nav-social__list__item">
            <a href="{{url}}" title="Unser linkedin-Profil" itemprop="sameAs">
              {{> atoms-icon icon="linkedin" role="img" }}
            </a>
          </li>
        </ul>
      </nav>
    </div>

  </div>
</footer>

{{#if modules.search}}
{{try "organisms-search-overlay"}}
{{/if}}
