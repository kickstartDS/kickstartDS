{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/base/organisms/teaser-box.schema.json",
  "title": "Teaser Box",
  "description": "Teaser Box element",
  "type": "object",
  "properties": {
    "items": {
      "title": "Items",
      "description": "Items for teaser box",
      "type": "array",
      "items": { "$ref": "#/definitions/teaserbox" },
      "default": []
    }
  },
  "definitions": {
    "teaserbox": {
      "type": "object",
      "title": "Item",
      "properties": {
        "contentCenter": {
          "title": "Content-center",
          "description": "Content-center for teaser box item",
          "type": "boolean",
          "default": ""
        },
        "image": {
          "title": "Image",
          "description": "Image for teaser box item",
          "type": "string",
          "format": "image",
          "example": "dummy/64-27-l.png",
          "default": "dummy/64-27-l.png"
        },
        "topic": {
          "title": "Title",
          "description": "Title for teaser box item",
          "type": "string",
          "default": ""
        },
        "text": {
          "title": "Text",
          "description": "Text for teaser box item",
          "type": "string",
          "format": "markdown",
          "default": ""
        },
        "imageSpacing": {
          "title": "Image-spacing",
          "description": "Image-spacing for teaser box item",
          "type": "boolean",
          "default": ""
        },
        "linkButtonText": {
          "title": "Link Button Text",
          "description": "Link Button Text for teaser box item",
          "type": "string",
          "default": "More"
        },
        "href": {
          "title": "Link target",
          "description": "Link target",
          "type": "string",
          "format": "uri",
          "default": ""
        }
      },
      "required": [
        "contentCenter",
        "image",
        "topic",
        "text",
        "linkButtonText",
        "href"
      ]
    }
  }
}
