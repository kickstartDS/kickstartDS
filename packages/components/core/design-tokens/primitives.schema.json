{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "kickstartDS Design Token Primitives",
  "type": "object",
  "properties": {
    "color": {
      "title": "Colors",
      "type": "object",
      "properties": {
        "primary": {
          "title": "Primary Color",
          "type": "string"
        },
        "background": {
          "title": "Background Color",
          "type": "string"
        },
        "foreground": {
          "title": "Foreground Color",
          "type": "string"
        },
        "link": {
          "title": "Link Color",
          "type": "string"
        }
      }
    },
    "font": {
      "title": "Typography",
      "type": "object",
      "properties": {
        "display": {
          "$ref": "#/definitions/font"
        },
        "copy": {
          "$ref": "#/definitions/font"
        },
        "ui": {
          "$ref": "#/definitions/font"
        },
        "mono": {
          "$ref": "#/definitions/font"
        }
      }
    },
    "font-weight": {
      "title": "Font Weights",
      "type": "object",
      "properties": {
        "light": {
          "type": "integer"
        },
        "regular": {
          "type": "integer"
        },
        "semi-bold": {
          "type": "integer"
        },
        "bold": {
          "type": "integer"
        }
      }
    },
    "spacing": {
      "title": "Spacings",
      "type": "object",
      "properties": {
        "base": {
          "type": "integer"
        },
        "scale-ratio": {
          "type": "number"
        },
        "bp-ratio": {
          "type": "number"
        }
      }
    },
    "breakpoints": {
      "type": "object",
      "additionalProperties": {
        "type": "integer"
      }
    }
  },
  "definitions": {
    "font": {
      "type": "object",
      "properties": {
        "family": {
          "title": "Font Family",
          "type": "string"
        },
        "size": {
          "title": "Font Sizes",
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": [
              {
                "title": "Font Size",
                "type": "number"
              },
              {
                "title": "Line Height",
                "type": "number"
              }
            ],
            "minItems": 2,
            "maxItems": 2
          }
        },
        "bp-factor": {
          "type": "object",
          "additionalProperties": {
            "title": "Breakpoint Factor",
            "type": "number"
          }
        }
      }
    }
  }
}
