{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/blog/molecules/post-aside.schema.json",
  "title": "Post Aside",
  "description": "Post Aside",
  "type": "object",
  "properties": {
    "author": {
      "title": "Author",
      "type": "object",
      "allOf": [
        {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/contact.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "headline": {
              "allOf": [
                {
                  "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/content"
                },
                {
                  "default": "Published by"
                }
              ]
            }
          }
        }
      ]
    },
    "meta": {
      "title": "Meta",
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "title": "Meta Item",
            "type": "object",
            "properties": {
              "icon": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            }
          },
          "default": [
            {
              "icon": "date",
              "text": "14.02.2022"
            },
            {
              "icon": "time",
              "text": "5 min read"
            }
          ]
        }
      }
    },
    "shareBar": {
      "title": "Share Bar",
      "type": "object",
      "properties": {
        "headline": {
          "allOf": [
            {
              "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/content"
            },
            {
              "default": "Share this article"
            }
          ]
        },
        "headlineLevel": {
          "allOf": [
            {
              "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/level"
            },
            {
              "default": "h3"
            }
          ]
        },
        "links": {
          "type": "array",
          "items": {
            "title": "Share Link",
            "type": "object",
            "properties": {
              "href": {
                "type": "string",
                "format": "uri"
              },
              "icon": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "newTab": {
                "type": "boolean",
                "title": "Open link in new Tab",
                "description": "Open link in new Tab",
                "default": false
              }
            }
          },
          "default": [
            {
              "icon": "twitter",
              "href": "https://twitter.com/intent/tweet?source=webclient&url=[URL]%2F&text=[TEXT]",
              "title": "Auf Twitter teilen",
              "newTab": true
            },
            {
              "icon": "facebook",
              "href": "http://www.facebook.com/sharer.php?u=[URL]",
              "title": "Auf Facebook teilen",
              "newTab": true
            },
            {
              "icon": "xing",
              "href": "https://www.xing.com/app/user?op=share;url=[URL]",
              "title": "Auf Xing teilen",
              "newTab": true
            },
            {
              "icon": "linkedin",
              "href": "https://www.linkedin.com/shareArticle?mini=true&url=[URL]&title=[TITLE]",
              "title": "Auf LinkedIn teilen",
              "newTab": true
            },
            {
              "icon": "email",
              "href": "mailto:?subject=[SUBJECT]",
              "title": "Per E-Mail teilen"
            }
          ]
        }
      }
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    }
  },
  "required": ["index", "link"]
}
