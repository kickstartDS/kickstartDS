{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/blog/molecules/news-item.definitions.json",
  "title": "News List / Latest Definitions",
  "description": "News List / Latest Definitions",
  "type": "object",
  "definitions": {
    "date": {
      "title": "Date",
      "description": "Date for news item",
      "type": "string",
      "format": "date",
      "default": "2021-03-29"
    },
    "link": {
      "title": "Link",
      "description": "Link for news item",
      "type": "object",
      "properties": {
        "href": {
          "$ref": "http://frontend.ruhmesmeile.com/base/atoms/link-button.schema.json#/definitions/href"
        },
        "label": {
          "$ref": "http://frontend.ruhmesmeile.com/base/atoms/button.schema.json#/definitions/label",
          "default": "weiter zum Newseintrag"
        }
      },
      "required": ["href", "label"]
    },
    "title": {
      "title": "Title",
      "description": "Title for news item",
      "type": "string",
      "default": "Lorem ipsum, dolor sit"
    },
    "body": {
      "title": "Bodytext",
      "description": "Bodytext for news item",
      "type": "string",
      "default": "Hic maxime sed eos non. Consequatur ut qui amet accusantium nesciunt."
    },
    "categories": {
      "title": "Categories",
      "type": "array",
      "items": {
        "$ref": "http://frontend.ruhmesmeile.com/base/atoms/tag-label.schema.json"
      }
    }
  }
}
