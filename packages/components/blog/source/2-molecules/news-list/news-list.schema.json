{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/blog/molecules/news-list.schema.json",
  "title": "News List",
  "description": "News list",
  "type": "object",
  "properties": {
    "image": {
      "allOf": [
        {
          "$ref": "http://frontend.ruhmesmeile.com/base/atoms/picture.definitions.json"
        }
      ],
      "properties": {
        "src": {
          "default": "https://picsum.photos/seed/kdsnewslist/900/380"
        },
        "width": {
          "default": 900
        },
        "height": {
          "default": 380
        }
      }
    },
    "date": {
      "$ref": "http://frontend.ruhmesmeile.com/blog/molecules/news-item.definitions.json#/definitions/date"
    },
    "link": {
      "$ref": "http://frontend.ruhmesmeile.com/blog/molecules/news-item.definitions.json#/definitions/link"
    },
    "title": {
      "$ref": "http://frontend.ruhmesmeile.com/blog/molecules/news-item.definitions.json#/definitions/title"
    },
    "body": {
      "$ref": "http://frontend.ruhmesmeile.com/blog/molecules/news-item.definitions.json#/definitions/body"
    },
    "categories": {
      "$ref": "http://frontend.ruhmesmeile.com/blog/molecules/news-item.definitions.json#/definitions/categories"
    },
    "index": {
      "type": "integer",
      "title": "Unique id"
    }
  },
  "required": ["index", "link"]
}
