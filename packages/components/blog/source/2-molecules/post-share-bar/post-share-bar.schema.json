{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://frontend.ruhmesmeile.com/blog/molecules/post-share-bar.schema.json",
  "title": "Post Share Bar",
  "description": "Post Share Bar",
  "type": "object",
  "properties": {
    "headline": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "content": {
              "allOf": [
                { "default": "Share this article" },
                {
                  "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/content"
                }
              ]
            },
            "align": {
              "allOf": [
                { "default": "left" },
                {
                  "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/align"
                }
              ]
            }
          }
        },
        {
          "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json"
        }
      ]
    },
    "links": {
      "type": "array",
      "items": {
        "title": "Share Link",
        "type": "object",
        "properties": {
          "href": {
            "type": "string",
            "format": "uri"
          },
          "icon": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "newTab": {
            "type": "boolean",
            "title": "Open link in new Tab",
            "description": "Open link in new Tab",
            "default": false
          }
        }
      },
      "default": [
        {
          "icon": "twitter",
          "href": "https://twitter.com/intent/tweet?source=webclient&url=[URL]%2F&text=[TEXT]",
          "title": "Share on Twitter",
          "newTab": true
        },
        {
          "icon": "facebook",
          "href": "http://www.facebook.com/sharer.php?u=[URL]",
          "title": "Share on Facebook",
          "newTab": true
        },
        {
          "icon": "xing",
          "href": "https://www.xing.com/app/user?op=share;url=[URL]",
          "title": "Share on Xing",
          "newTab": true
        },
        {
          "icon": "linkedin",
          "href": "https://www.linkedin.com/shareArticle?mini=true&url=[URL]&title=[TITLE]",
          "title": "Share on LinkedIn",
          "newTab": true
        },
        {
          "icon": "email",
          "href": "mailto:?subject=[SUBJECT]",
          "title": "Send E-Mail",
          "newTab": true
        }
      ]
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    }
  }
}
