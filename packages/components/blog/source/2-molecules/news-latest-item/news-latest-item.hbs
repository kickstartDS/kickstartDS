<article class="news-latest__item">
  <div class="news-latest__item__image">
    <img src="{{@root.asset_paths.images}}/{{ image }}" alt="">
  </div>

  <div class="news-latest__item__meta">
    <time datetime="{{ dateFormat date 'yyy-MM-dd' }}" class="news-latest__item__date">{{ dateFormat date 'dd.MM.yyyy' }}</time>
    {{#if tag-labels}}{{> molecules-tag-label-container}}{{/if}}
  </div>

  <div class="news-latest__item__body">
    <h2 class="news-latest__item__headline" id="news-header-{{ index }}">
      <a href="{{ link }}">{{ default title "Lorem ipsum dolor sit amet, consectetur corporis." }}</a>
    </h2>
    <p class="news-latest__item__teaser">
      {{ default body "Lorem ipsum dolor sit amet, consectetur corporis." }}
    </p>
    <div class="news-latest__item__more">
      {{> atoms-link-button
        href=url
        open-in-tab=open-in-tab
        id=(concat "news-link-more-" index)
        aria-labelledby=(concat "news-link-more-" index " news-header-" index)
        label="weiter zum Newseintrag"
        icon=(object icon="arrow-right")
        iconAfter=true
        style="clear"
      }}
    </div>
  </div>
</article>
