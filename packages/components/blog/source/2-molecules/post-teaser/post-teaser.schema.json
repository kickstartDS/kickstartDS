{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/blog/post-teaser.schema.json",
  "title": "Post Teaser",
  "description": "Post Teaser",
  "type": "object",
  "properties": {
    "variant": {
      "type": "string",
      "title": "Teaser Style",
      "description": "Choose one of the styles from the list",
      "enum": ["image-first", "title-first"],
      "default": "image-first"
    },
    "image": {
      "type": "object",
      "allOf": [
        {
          "$ref": "http://schema.kickstartds.com/base/picture.definitions.json"
        }
      ],
      "properties": {
        "src": {
          "default": "https://picsum.photos/seed/kdsnewslatest/900/380"
        },
        "width": {
          "default": 900
        },
        "height": {
          "default": 380
        }
      }
    },
    "date": {
      "$ref": "http://schema.kickstartds.com/blog/news-item.definitions.json#/definitions/date"
    },
    "link": {
      "$ref": "http://schema.kickstartds.com/blog/news-item.definitions.json#/definitions/link"
    },
    "title": {
      "$ref": "http://schema.kickstartds.com/blog/news-item.definitions.json#/definitions/title"
    },
    "body": {
      "$ref": "http://schema.kickstartds.com/blog/news-item.definitions.json#/definitions/body"
    },
    "categories": {
      "$ref": "http://schema.kickstartds.com/blog/news-item.definitions.json#/definitions/categories"
    },
    "index": {
      "type": "integer",
      "title": "Unique id"
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    }
  },
  "required": ["index", "link"]
}
