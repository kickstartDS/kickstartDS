{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/content/count-up.schema.json",
  "title": "Count Up",
  "description": "Component to to increase a number up to a final value",
  "type": "object",
  "properties": {
    "to": {
      "title": "Number",
      "description": "Final number to count to",
      "type": "integer",
      "examples": [1200]
    },
    "icon": {
      "$ref": "http://schema.kickstartds.com/base/icon.definitions.json"
    },
    "topic": {
      "title": "Topic",
      "description": "Topic for the count-up box. Displayed before the text, in bold",
      "type": "string",
      "examples": ["Lorem Ipsum"]
    },
    "text": {
      "title": "Text content",
      "description": "Copy text for the element",
      "type": "string",
      "format": "markdown",
      "examples": [
        "Consequuntur est quia atque eum ducimus. Consequatur fugiat hic eos perferendis. Libero unde omnis dolorem maxime occaecati sapiente distinctio. Consectetur non placeat dolorem est animi."
      ]
    },
    "link": {
      "title": "Link",
      "type": "object",
      "allOf": [
        {
          "properties": {
            "enabled": {
              "title": "Display link",
              "description": "Toggles visibility of the link",
              "type": "boolean",
              "default": true
            }
          }
        },
        {
          "$ref": "http://schema.kickstartds.com/base/button.schema.json"
        }
      ]
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    },
    "expand": {
      "title": "",
      "description": "See https://github.com/aFarkas/lazysizes/blob/gh-pages/README.md#data-expand-attribute",
      "type": "integer",
      "default": -100
    },
    "component": {
      "title": "`ks-component` attribute",
      "description": "Optional custom component identifier",
      "type": "string",
      "default": "content.count-up"
    }
  },
  "required": ["to"]
}
