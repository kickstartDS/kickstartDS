{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/content/contact.schema.json",
  "title": "Contact",
  "description": "Component to show contact information",
  "type": "object",
  "properties": {
    "image": {
      "$ref": "http://schema.kickstartds.com/base/picture.definitions.json"
    },
    "title": {
      "title": "Title",
      "description": "Name, company name, etc.",
      "type": "string",
      "default": "Max Mütze"
    },
    "subtitle": {
      "title": "Subtitle",
      "description": "Position, profession, department, location, etc.",
      "type": "string",
      "default": "Geschäftsführer"
    },
    "phone": {
      "title": "Phone number",
      "type": "string",
      "default": "0228 / 688 966 20"
    },
    "email": {
      "title": "Email address",
      "type": "string",
      "format": "email",
      "default": "mail@example.com"
    },
    "copy": {
      "title": "Copy text",
      "type": "string"
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    }
  }
}
