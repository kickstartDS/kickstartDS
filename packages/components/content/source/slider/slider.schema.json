{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/content/slider.schema.json",
  "title": "Slider",
  "description": "Slider",
  "definitions": {
    "autoplay": {
      "title": "Auto play",
      "description": "Automatically move to next slide after 4 seconds without user interaction",
      "type": "boolean",
      "default": false
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    },
    "component": {
      "title": "Component",
      "description": "Optional custom component identifier",
      "type": "string",
      "default": "content.slider"
    },
    "arrows": {
      "title": "Arrows",
      "description": "Add arrows on the left and right to navigate to next or previous slide",
      "type": "string",
      "enum": ["none", "outer", "inner"],
      "default": "none"
    },
    "slide": {
      "title": "Slide",
      "description": "Slide",
      "type": "object",
      "required": ["slideComponent", "previewComponent", "previewLabel"],
      "properties": {
        "slideComponent": {
          "title": "slide component",
          "description": "slide component",
          "type": "string",
          "default": ""
        },
        "previewComponent": {
          "title": "preview component",
          "description": "preview component",
          "type": "string",
          "default": ""
        },
        "previewLabel": {
          "title": "preview label",
          "description": "preview label",
          "type": "string",
          "default": "Slide 1"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "autoplay": {
      "$ref": "#/definitions/autoplay"
    },
    "className": {
      "$ref": "#/definitions/className"
    },
    "component": {
      "$ref": "#/definitions/component"
    },
    "arrows": {
      "$ref": "#/definitions/arrows"
    }
  }
}
