{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/content/quotes-slider.schema.json",
  "title": "Quotes Slider",
  "type": "object",
  "properties": {
    "slides": {
      "type": "array",
      "items": {
        "$ref": "http://schema.kickstartds.com/content/quote.schema.json"
      }
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the slider",
      "type": "string"
    },
    "component": {
      "title": "`ks-component` attribute",
      "description": "Optional custom component identifier",
      "type": "string",
      "default": "content.quotes-slider"
    }
  }
}
