{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.kickstartds.com/content/visual-slider.schema.json",
  "title": "Visual Slider",
  "description": "Visual Slider",
  "type": "object",
  "required": ["slides"],
  "properties": {
    "autoplay": {
      "$ref": "http://schema.kickstartds.com/content/slider.schema.json#/definitions/autoplay"
    },
    "slides": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://schema.kickstartds.com/content/visual.schema.json"
          },
          {
            "type": "object",
            "properties": {
              "label": {
                "title": "Slide preview label",
                "description": "preview label",
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        ]
      }
    },
    "className": {
      "title": "Class",
      "description": "Additional css classes attached to the wrapping element",
      "type": "string"
    }
  }
}
